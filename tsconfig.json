{
  "$schema": "http://json.schemastore.org/tsconfig",
  "extends": "../typescript/tsconfig.json",
  "compilerOptions": {
    /* Emit Options */
    "target": "ESNext",
    "module": "CommonJS",
    "moduleResolution": "node",
    "rootDir": "./src",
    "outDir": "./build/lib",
    "declaration": true,
    "declarationDir": "./build/typings",
    "tsBuildInfoFile": "./build/ts-out-info.lib",
    "emitDecoratorMetadata": false,
    "experimentalDecorators": false,
    // "sourceMap": true, // opted out in favor of inlineSourceMap
    "declarationMap": true,
    "inlineSources": true,
    "inlineSourceMap": true,
    "emitDeclarationOnly": false,
    /* JavaScript Support */
    "allowJs": true,
    "checkJs": false,
    /* Bundled library declaration files that describe the target runtime environment. */
    "lib": [
      "dom",
      "esnext"
    ],
    /* Package names to be included without being referenced in a source file. */
    "types": [
      "node"
    ],
    "baseUrl": "./",
    "paths": {
      "*": [
        "*",
        "src/*"
      ]
    }
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "lib",
    "**/jest.*.js",
    "private/archive/**"
  ]
}
